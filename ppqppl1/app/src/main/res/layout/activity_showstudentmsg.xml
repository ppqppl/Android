<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="114dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/avatar1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="学号       ："/>
            <EditText
                android:id="@+id/stu_idtxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="姓名       ："/>
            <EditText
                android:id="@+id/nametxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="年龄       ："/>
            <EditText
                android:id="@+id/agetxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="性别       ："/>
            <EditText
                android:id="@+id/sextxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="手机号    ："/>

            <EditText
                android:id="@+id/phonetxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:fontFamily="@font/naibuerxingyueti2"
                android:inputType="phone"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="入学日期 ："/>
            <EditText
                android:id="@+id/traimDatetxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="专业       ："/>
            <EditText
                android:id="@+id/majortxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="班级       ："/>
            <EditText
                android:id="@+id/classtxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pwdlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="密码       ："/>
            <EditText
                android:id="@+id/pwdtxt"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:textSize="20dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:textColor="#000000"
            android:fontFamily="@font/naibuerxingyueti2"
            android:textSize="20dp"
            android:text="返回学生列表"/>
        <Button
            android:id="@+id/modifymsgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:textColor="#000000"
            android:fontFamily="@font/naibuerxingyueti2"
            android:textSize="20dp"
            android:text="修改个人信息"/>
        <LinearLayout
            android:id="@+id/btnlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/savebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:background="#00000000"
                android:textSize="20dp"
                android:text="确定"/>
            <Button
                android:id="@+id/cancelbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="35dp"
                android:textColor="#000000"
                android:fontFamily="@font/naibuerxingyueti2"
                android:background="#00000000"
                android:textSize="20dp"
                android:text="取消"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>