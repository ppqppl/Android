<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desert"
    android:id="@+id/activity_multy"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="128dp"
                android:layout_height="137dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/main" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="主页"
                android:textSize="25dp"
                android:textStyle="bold"
                android:fontFamily="@font/naibuerxingyueti2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Gpsbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableLeft="@drawable/gps"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="我的位置"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/userbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableLeft="@drawable/user"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="学生管理"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/camerabtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableLeft="@drawable/cam"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="拍一拍"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/paycodebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableLeft="@drawable/pay"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="智慧支付"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/musicbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableLeft="@drawable/music"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="我的音乐"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/videobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableLeft="@drawable/tool"
                android:fontFamily="@font/naibuerxingyueti2"
                android:text="我的视频"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>